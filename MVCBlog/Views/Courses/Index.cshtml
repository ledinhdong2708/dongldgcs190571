@model IEnumerable<MVCBlog.Models.Course>

@{
    ViewBag.Title = "Index";
}
<h2>Courses</h2>
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Administrators") || User.IsInRole("Training Staff"))
    {
        @Html.ActionLink("Create New", "Create")
    }
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CourseDate)
        </th>

        <th></th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>

                @Html.DisplayFor(modelItem => item.CourseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseDate)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Administrators") || User.IsInRole("Training Staff"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        @Html.ActionLink("| Details", "Details", new { id = item.Id })
                        @Html.ActionLink("| Delete", "Delete", new { id = item.Id })

                    }
                }

                @if (User.Identity.IsAuthenticated)
                {
                    if (User.IsInRole("Trainee") || User.IsInRole("Trainer"))
                    {
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    }
                }

            </td>
        </tr>
    }

</table>
